{
  "include": ["src/**/*"],
  "compilerOptions": {
    "outDir": "build/es",
    "declarationDir": "build/types",
    "declaration": true,
    "target": "es6",
    "module": "esnext",
    "jsx": "preserve",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  }
}
